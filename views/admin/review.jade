extends ../layout

block content
  header
  nav.navbar.navbar-fixed-top
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#myNavbar' aria-expanded='false')
          span.sr-only Toggle Navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/home') (boot)(up)
      #myNavbar.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li.active
            a(href='/admin') HOME
            span.sr-only(current)
          li.active
            a(href='/admin/accepted') ACCEPTED
            span.sr-only(current) 
          li.active
            a(href='/admin/waitlisted') WAITLIST
            span.sr-only(current)
          li.active
            a(href='/admin/alternative') ALTERNATIVE
            span.sr-only(current) 
          li.active
            a(href='/logout') LOGOUT
            span.sr-only(current)
            
  br    
  div#belownav
  div
    br
    each section in profile
      h1.mini applicant review
      h2 #{section.name.firstName} #{section.name.lastName}
      h3 
      h4#red #{section.application.status}
      br    
  div#applicantreview
  br
  div.row
  
    div.col-md-4#adminreview
      each section in profile
        dl
          h3 #{section.name.preferredName} 
          dt #{section.name.firstName} #{section.name.lastName}
          br
          dt #{section.demographics.age} - #{section.demographics.gender} - #{section.demographics.ethnicity} 
          br
          dt #{section.contact.phone}
          br
          dt #{section.contact.email}
          br 
          dt #{section.contact.address} 
          br
          dt #{section.social.github}
          dt #{section.social.facebook} 
          dt #{section.social.twitter}
          br
          dt status: 
            dd#red #{section.application.status}
          br
          form(method="post")
            input(hidden, type="text",  name="status", value="accepted")
            button.btn.btn-default#adminbutton(type="submit") ACCEPTED
            br
          form(method="post")
            input(hidden, type="text",  name="status", value="waitlist")
            button.btn.btn-default#adminbutton(type="submit") WAITLIST
            br
          form(method="post")
            input(hidden, type="text",  name="status", value="alternative track")
            button.btn.btn-default#adminbutton(type="submit") ALTERNATIVE
            br
          form(method="post")
            input(hidden, type="text",  name="status", value="under review")
            button.btn.btn-default#adminbutton(type="submit") UNDER REVIEW
            br    
              
    div.col-md-8#adminreview
      form(method="post")
      .form-group   
      each responses in questionaire
        each detail in responses.question
          h4 #{detail.statement}
          br
          dd #{detail.response}
            br
            br
            label(for='exampleSelect1') rate response
              |     
              select#exampleSelect1.form-control
                option 1
                |       
                option 2
                |       
                option 3
                |       
                option 4
                |       
                option 5
                |       
                option 6
                |       
                option 7
                |       
                option 8
                |       
                option 9
                |       
                option 10
      br
      | notes:          
      textarea.form-control#exampleTextarea(rows="6")
      br      
      input.btn.btn-default#adminsubmit(type="submit")
      br
      br
      br
      br
