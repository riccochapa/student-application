  br
  div#belownav
  div
  br
  h1.mini fall applications
  br
  div#applicantreview
  br
  br
  br
  div.dashboard
    div.row
      div.col-md-4
        h3 pending review
        br
        each applicant in profile
          div
          - var appReview = applicant.application.status
          if appReview == "under review"
            dl
              button.list-group-item
                  dt #{applicant.name.firstName} #{applicant.name.lastName}
                  br
                  a.btn.btn-xs.btn-default#adminsubmit(href='/admin/review/#{applicant.id}') REVIEW
                  br      
      div.col-md-8
        div.container-fluid
          h3 applicant dashboard
          br
          div.row
            div.col-md-4.surround
              - var total = 0;
                each appStat in profile
                  - var number = [];
                  - var stat = appStat.application.status
                  - if (stat == "under review"){
                  -  number.push(appStat.name.firstName)
                  - }
                  - if (number.length == true){
                  -  total += 1;
                  - }  
                br
                h1#red #{total}
                h5#red pending review
            div.col-md-4.surround
              - var total = 0;
                each applicant in profile
                  - var number = [];
                  - var stat = applicant.id
                  - if (stat){
                  -  number.push(applicant.id)
                  - }
                  - if (number.length == true){
                  -  total += 1;
                  - } 
                br
                h2#red #{total} 
                h5#red profiles
            div.col-md-4.surround
              - var total = 0;
                each applicant in questionaire
                  - var number = [];
                  - var stat = applicant.id
                  - if (stat){
                  -  number.push(applicant.id)
                  - }
