                  - }  
                br
                h2#red #{total} 
                h5#red questionaires        
          div.row
            div.col-md-4.surround
              - var total = 0;
                each appStat in profile
                  - var number = [];
                  - var stat = appStat.application.status
                  - if (stat == "accepted"){
