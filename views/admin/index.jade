extends ../layout

block content
  header
  nav.navbar.navbar-fixed-top
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#myNavbar' aria-expanded='false')
          span.sr-only Toggle Navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/home') (boot)(up)
      #myNavbar.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li.active
