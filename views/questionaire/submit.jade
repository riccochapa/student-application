extends ../layout

block content
  div#submit.slide
    br
    h1#questionaire submitted application
    br
    each response in questionaire.question
      ul
      br
      .panel.panel-default
        .panel-heading
          h3.panel-title #{response.statement}
        .panel-body
          h5.panel-title #{response.response}
      br
      a.btn.btn-default#profilebutton(href='/questionaire/edit/#{response.number}') edit response
      br
      br
