extends ../layout

block content
  div
  div#submit
    h1.easy#questionaire submitted application
    br
    each response in questionaire.question
      ul
      br
      .panel.panel-default.slide
        .panel-heading
          h3.panel-title #{response.statement}
        .panel-body
          h5.panel-title #{response.response}
      br
      a.btn.btn-default#profilebutton.easy(href='/questionaire/edit/#{response.number}') edit response
      br
      br
